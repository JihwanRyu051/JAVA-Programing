package TicTacToeUsingGUI;
import javax.swing.*;
import java.awt.event.*;
import java.awt.*;
import javax.swing.border.LineBorder;

public class TicTacToe extends JFrame{
	JLabel label;
	JTextArea text;
	GridBagConstraints gbc = new GridBagConstraints();
	GridBagLayout grid = new GridBagLayout();
	TicTacToeBoard TTB = new TicTacToeBoard();
	JPanel panel = new JPanel();
	int count = 0;
	
	class Terminator extends WindowAdapter{
		public void windowClosing(WindowEvent e) {
			System.exit(0);
		}
	}
	
	class QuitAction implements ActionListener{
		public void actionPerformed(ActionEvent e) {
			System.exit(0);
		}
	}
	public TicTacToe() {
		setTitle("Tic Tac Toe");
		setSize(500,500);
		setLocation(100,200);
		//setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		addWindowListener(new Terminator());
		setContentPane(getPanel());
	}
		
	public static void main(String[] args) {
		JFrame jf = new TicTacToe();
		jf.setVisible(true);
		
	}
	
	public JPanel getPanel() {
		
		panel.setLayout(grid);
	
		gbc.fill = GridBagConstraints.BOTH;
		gbc.weightx = 1;
		gbc.weighty = 0.3;
		label = makeLabel();
		make(label, 0,0,3,1);
		panel.add(label);
		gbc.weightx = 1;
		gbc.weighty = 1;
		for(int i=0; i<3; i++) {
			for(int j=0; j<3; j++) {
				JButton btn = makeButton(i,j);
				make(btn,j,i+1,1,1);
				panel.add(btn,gbc);
			}
		}	
		return panel; //setLayout(), FlowLayout()...
	}
	
	public void make(JComponent c, int x, int y, int w, int h) {
        gbc.gridx = x;
        gbc.gridy = y;
        gbc.gridwidth = w;
        gbc.gridheight = h;
        grid.setConstraints(c, gbc);
        // GridBagLayout의 GridBagConstraints의 set하는 방법
 }
	private JButton makeButton(int i, int j) {
		final JButton btn = new JButton();
		if(i<0) {
			if(j<0) {
				btn.setText("restart");
			}
			else {
				btn.setText("Quit");
			}
		}
		else {
		btn.setName(i+""+j);
		btn.addActionListener(new ActionListener(){
				public void actionPerformed(ActionEvent e) {
					if(label.getText().equals("")) {
						if(btn.getText().equals("")) {
						count++;
						if(count%2 == 0) btn.setText("X");
						else 			 btn.setText("O");
						label.setText(TTB.run(btn));
						}
					}
					else {
						JButton Quitbtn = makeButton(-1,0);
						JButton Rebtn = makeButton(-1,-1);
						make(Quitbtn, 4,0,1,1);
						panel.add(Quitbtn);
						make(Rebtn, 4,2,1,1);
						panel.add(Rebtn);				
					}
			}
			});
		}
		return btn;
	}
	
	private JLabel makeLabel() {
		JLabel hello = new JLabel("");
		return hello;
	}
	
}